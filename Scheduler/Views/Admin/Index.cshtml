@model Scheduler.Models.Doctor
@{
    ViewData["Title"] = "Create doctor";
}
<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm("create", "Home"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Surname)
        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Scope)
        @Html.TextBoxFor(m => m.Scope, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Office)
        @Html.TextBoxFor(m => m.Office, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
}