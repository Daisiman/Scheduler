@model IEnumerable<Scheduler.Models.BlackList>

@inject UserManager<ApplicationUser> UserManager

@if (Model.Count() == 0)
{
    <p>Blacklist is empty</p>
}
else
{
    <table class="table table-bordered">
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.UserName</td>
                <td>@user.DateAdded</td>
                <td>
                    <form asp-action="BlackList" asp-controller="Admin" method="post">
                        <input type="hidden" name="id" value="@user.UserId" />
                        <input type="hidden" name="date" value="@user.DateAdded" />
                        <input type="submit" value="Remove" class="btn btn-link" />
                    </form>
                </td>
            </tr>
        }
    </table>
}


